<div class="columns is-centered mt-6 is-max-desktop">
    <form id="login-form" class="column is-one-third">
        <h2 class="title">Login</h2>
        <div class="field">
            <label class="label" for="email-login">Email</label>
            <div class="control has-icons-left">
                <input class="input" id="email-login" type="email" placeholder="e.g. alexsmith@gmail.com">
                <span class="icon is-small is-left">
                    <i class="fa fa-envelope"></i>
                </span>
            </div>
        </div>
        <div class="field">
            <label class="label" for="password-login">Password</label>
            <div class="control">
                <input class="input" id="password-login" type="password">
            </div>
        </div>
        <button type="submit" class="button">Login</button>
    </form>
    <form id="signup-form" class="column is-one-quarter">
        <h2 class="title">Sign up</h2>
        <div class="field">
            <label class="label" for="name-signup">Name</label>
            <div class="control has-icons-left">
                <input class="input" id="name-signup" type="text" placeholder="e.g. Alex Smith">
                <span class="icon is-small is-left">
                    <i class="fa fa-user"></i>
                </span>
            </div>
        </div>
        <div class="field">
            <label class="label" for="email-signup">Email</label>
            <div class="control has-icons-left">
                <input class="input is-danger" id="email-signup" type="email" placeholder="e.g. alexsmith@gmail.com">
                <span class="icon is-small is-left">
                    <i class="fa fa-envelope"></i>
                </span>
            </div>
            <p class="help is-danger">Please use a unique email</p>
        </div>
        <div class="field">
            <label class="label" for="password-signup">Password</label>
            <div class="control">
                <input class="input" id="password-signup" type="password">
            </div>
        </div>
        <button type="submit" class="button">Sign up</button>
    </form>
</div>

<script src="/js/login.js"></script>
