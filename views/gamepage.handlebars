<div class="columns is-centered is-desktop mt-6">
    <section class="column is-two-thirds container game-container">
        <div class="card">
            <div class="card-header has-background-primary">
                <h2 class="card-header-title">{{game.name}}</h2>
            </div>
            <div class="card-content">
                <div id="gameCanvas" class="is-center"></div>
            </div>
        </div>

    </section>
    <section class="column has-text-left-desktop has-text-centered">
        <h2 class="title">Scores</h2>
        <ul>
            {{#each scores}}
                <li>{{this.score}}</li>
            {{/each}}
        </ul>
    </section>
</div>
</section>
